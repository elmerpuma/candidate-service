{
  "info": {
    "name": "Client Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección para Candidate Service"
  },
  "item": [
    {
      "name": "Auth Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/api/v1/auth/token", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","token"] },
        "body": { "mode": "raw", "raw": "{\"username\":\"admin\",\"password\":\"password\"}" }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const data = pm.response.json();",
              "pm.collectionVariables.set('token', data.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Crear Cliente 200",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/v1/clients", "host": ["{{baseUrl}}"], "path": ["api","v1","clients"] },
        "body": { "mode": "raw", "raw": "{\"nombre\":\"Ana\",\"apellido\":\"Lopez\",\"edad\":28,\"fechaNacimiento\":\"1997-01-01\"}" }
      }
    },
    {
      "name": "Crear Cliente 422",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/v1/clients", "host": ["{{baseUrl}}"], "path": ["api","v1","clients"] },
        "body": { "mode": "raw", "raw": "{\"nombre\":\"Bad\",\"apellido\":\"Age\",\"edad\":-1,\"fechaNacimiento\":\"2000-01-01\"}" }
      }
    },
    {
      "name": "Listar Clientes 200",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/v1/clients", "host": ["{{baseUrl}}"], "path": ["api","v1","clients"] }
      }
    },
    {
      "name": "Métricas 200",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/v1/clients/metrics", "host": ["{{baseUrl}}"], "path": ["api","v1","clients","metrics"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" }
  ]
}

